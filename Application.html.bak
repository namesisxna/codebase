<div layout="column" layout-fill ng-controller="AppController">
    <md-toolbar layout="row" layout-align="center">
        <div class="md-toolbar-tools" flex-gt-md="60" flex-md="80" flex-sm="100">
		
            <span layout="row" layout-align="center center">Common Application</span>
            
        </div>
    </md-toolbar>
    <div layout-padding layout="row" layout-align="center">
        <div flex-gt-md="60" flex-md="80" flex-xs="100">
            <div layout-gt-xs="row" layout-xs="column" layout-align="stretch center">
                <div layout="row" layout-align="start center">
                    <md-input-container md-no-float md-is-error="false" class="md-block">
                        <input ng-model="code"
                               class="md-input"
                               ng-change="gridActions.filter()"
                               id="order"
                               placeholder="Search by Id"
                               filter-by="code"
                               filter-type="text"
                               aria-invalid="false">
                    </md-input-container>
                </div>
               <!-- <div layout="row" layout-align="start center">
                    <md-datepicker ng-model="AppController.dateFrom"
                                   md-placeholder="From Date"
                                   is-open="dateFromOpened"
                                   ng-click="dateFromOpened = true"
                                   filter-by="placed"
                                   filter-type="dateFrom"
                                   ng-change="gridActions.filter()">
                    </md-datepicker>
                </div> -->
				<div layout-gt-xs="row" layout-align="start center">
    <div flex-gt-xs="">
      <md-datepicker ng-model="ctrl.myDate" md-placeholder="Enter date"></md-datepicker>
    </div>
	</div>
				
                <div layout="row" layout-align="start center">
                    <md-datepicker ng-model="dateTo"
                                   md-placeholder="To Date"
                                   is-open="dateToOpened"
                                   ng-click="dateToOpened = true"
                                   filter-by="placed"
                                   filter-type="dateTo"
                                   ng-change="gridActions.filter()">
                    </md-datepicker>
                </div>
                <div layout="row" layout-align="start center">
                    <md-button ng-show="dateTo || dateFrom"
                               class="md-raised md-primary"
                               ng-click="dateTo = ''; dateFrom = ''; gridActions.refresh();">Clear Dates
                    </md-button>
                </div>
            </div>
            <div grid-data id='test' grid-options="gridOptions" grid-actions="gridActions">
                <div layout-gt-sm="row" layout-sm="column" layout-align="center">
                   
                    
                </div>
                <div>
                    <table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp">
                        <thead>
                        <tr>
                           <!-- <th sortable="code" class="sortable mdl-data-table__cell--non-numeric">
                                <span>App_Id</span>
                                <span class="arrow"></span>
                            </th>
							<th sortable="code" class="sortable mdl-data-table__cell--non-numeric">
                                <span>App_Name</span>
                                <span class="arrow"></span>
                            </th>
                            <!--<th class="st-sort-disable th-dropdown">
                                <md-select filter-by="statusDisplay"
                                           filter-type="select"
                                           ng-model="status"
                                           placeholder="Status"
                                           ng-change="filter()">
                                    <md-option value="">All Statuses</md-option>
                                    <md-option ng-repeat="option in statusOptions track by option.value"
                                               value="{{option.value}}">
                                        {{option.text}}
                                    </md-option>
                                </md-select>
                            </th> -->
							<th sortable="placed" class="sortable">
                                <span>Id</span>
                                <span class="arrow"></span>
                            </th>
							 <th sortable="placed" class="sortable">
                                <span>Name</span>
                                <span class="arrow"></span>
                            </th>
							<th sortable="placed" class="sortable">
                                <span>Status</span>
                                <span class="arrow"></span>
                            </th>
							<th sortable="placed" class="sortable">
                                <span>Create User</span>
                                <span class="arrow"></span>
                            </th>
                            <th sortable="placed" class="sortable">
                                <span>Create Date</span>
                                <span class="arrow"></span>
                            </th>
							<th sortable="placed" class="sortable">
                                <span>Update User</span>
                                <span class="arrow"></span>
                            </th>
							<th sortable="placed" class="sortable">
                                <span>Update Date</span>
                                <span class="arrow"></span>
                            </th>
                           
                        </tr>
                        </thead>
                        <tbody>
                        <tr grid-item>
                            
							<td ng-bind="item.code"></td>
                            <td ng-bind="item.statusDisplay"></td>
							<td ng-bind="item.statusDisplay"></td>
							<td ng-bind="item.code"></td>
                            <td ng-bind="item.placed | date:'MM/dd/yyyy'"></td>
							<td ng-bind="item.code"></td>
                            <td ng-bind="item.placed | date:'MM/dd/yyyy'"></td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div layout-xs="column" layout="row" layout-align-xs="end end" layout-align="end center">
                    <grid-pagination max-size="5"
                                     boundary-links="true"
                                     class="pagination"
                                     ng-if="paginationOptions.totalItems  > paginationOptions.itemsPerPage"
                                     total-items="paginationOptions.totalItems"
                                     ng-model="paginationOptions.currentPage"
                                     ng-change="reloadGrid()"
                                     items-per-page="paginationOptions.itemsPerPage"></grid-pagination>
                    <md-input-container flex-offset-gt-xs="5" class="items-per-page">
                        <md-select ng-init="paginationOptions.itemsPerPage = '10'" ng-model="paginationOptions.itemsPerPage" ng-change="reloadGrid()">
                            <md-option ng-value="10">10</md-option>
                            <md-option ng-value="25">25</md-option>
                            <md-option ng-value="50">50</md-option>
                            <md-option ng-value="75">75</md-option>
                        </md-select>
                    </md-input-container>
                </div>
				
				<hr>
            
	<span layout-gt-xs="row" layout-align="center center">
		<span >
			<md-button class="md-fab md-fab-bottom-center md-accent md-hue-2"
			aria-label="Create User" ng-click="createUser()"> 
			<md-icon md-svg-icon="../trizetto-UI/img/icons/ic_create_black_24px.svg"></md-icon>
			<md-tooltip md-direction="top">create</md-tooltip>
		</span>
		<span  >
			<md-button class="md-fab md-fab-bottom-center md-accent md-hue-2"
			aria-label="Create User" ng-click="createUser()"> 
			<md-icon md-svg-icon="../trizetto-UI/img/icons/ic_update_black_24px.svg"></md-icon>
			<md-tooltip md-direction="top">update</md-tooltip>
		</span>
		<span  >
			<md-button class="md-fab md-fab-bottom-center md-accent md-hue-2"
			aria-label="Create User" ng-click="createUser()"> 
			<md-icon md-svg-icon="../trizetto-UI/img/icons/ic_delete_forever_black_24px.svg"></md-icon>
			<md-tooltip md-direction="top">delete</md-tooltip>			
		</span>
		</span>
            <hr>
            </div>
            
        </div>
    </div>
</div>

